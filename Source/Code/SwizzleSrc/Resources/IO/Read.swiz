extend IO {
    func getChar() -> Character {
        let cur = self._text[_pos];
        self._text.formNext(&_pos);
        return cur;
    }
    func getLine() -> String {
        let cur = self._text[_pos...];
        self._pos = _text.end;
        return String(cur);
    }
}
